<!DOCTYPE html>
<html lang="en">
  <head>
    <title><%= title %></title>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link
      rel="stylesheet"
      href="https://maxcdn.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css"
    />
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js"></script>
  </head>
  <body>
    <div class="container">
      <h1 class="display-6" style="text-align: center"><%= title %></h1>
      <a href="/add" class="btn btn-sm btn-primary">Add User</a><br /><br />
      <table class="table table-dark table-striped">
        <thead>
          <tr>
            <th>NR</th>
            <th>ID</th>
            <th>First Name</th>
            <th>Last Name</th>
            <th>Email</th>
            <th>Phone Number</th>
            <th>Hire Date</th>
            <th>Job ID</th>
            <th>Salary</th>
            <th>Commission PCT</th>
            <th>Manager ID</th>
            <th>Department ID</th>
          </tr>
        </thead>
        <tbody>
          <% result.rows.forEach(function(user, index){ %>
          <tr>
            <td><%= index + 1 %></td>
            <td><%= user[0] %></td>
            <td><%= user[1] %></td>
            <td><%= user[2] %></td>
            <td><%= user[3] %></td>
            <td><%= user[4] %></td>
            <td><%= user[5].toString().slice(0, 15) %></td>
            <td><%= user[6] %></td>
            <td><%= user[7] %></td>
            <td><%= user[8] !== null ? user[8] : 'Null' %></td>
            <td><%= user[9] !== null ? user[9] : 'Null' %></td>
            <td><%= user[10] %></td>
            <td><%= user[11] %></td>
            <td>
              <a href="edit/<%= user[0] %>" class="btn btn-sm btn-primary"
                >Edit</a
              >
            </td>
            <td>
              <a href="delete/<%= user[0] %>" class="btn btn-sm btn-danger"
                >Delete</a
              >
            </td>
          </tr>
          <% }); %>
        </tbody>
      </table>
    </div>
  </body>
</html>
